<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.misstilo.cloth_erp_api.mapper.store.store.StoreMapper">
  <!-- Result Map for Store -->
  <resultMap id="storeResultMap" type="com.misstilo.cloth_erp_api.model.store.store.StoreResponse">
    <id column="Id" property="id" />
    <result column="Code" property="code" />
    <result column="Name" property="name" />
    <result column="IsActive" property="isActive" />
    <result column="CreateAt" property="createAt" />
    <result column="UpdateAt" property="updateAt" />
    <association property="storeType" javaType="com.misstilo.cloth_erp_api.model.store.storeType.StoreTypeResponse">
      <id column="StoreTypeId" property="id" />
      <result column="StoreTypeName" property="name" />
    </association>
  </resultMap>

  <!-- Insert -->
  <insert id="insert">
    INSERT INTO Store (Code, Name, StoreTypeId, IsActive)
    VALUES (#{code}, #{name}, #{storeTypeId}, #{isActive})
  </insert>
  <!-- Delete -->
  <delete id="delete">
    DELETE FROM Store
    WHERE Id = #{id}
  </delete>
  <!-- Update -->
  <update id="update">
    UPDATE Store
    <set>
      <if test="!= null">
        Name = #{name},
      </if>
      <if test="!= null">
        StoreTypeId = #{storeTypeId},
      </if>
      <if test="!= null">
        IsActive = #{isActive},
      </if>
      UpdateAt = SYSDATETIME()
    </set>
    <where>
      Id = #{id}
    </where>
  </update>
  <!-- Select -->
  <select id="select" resultMap="storeResultMap">
    SELECT S.*, ST.Name AS StoreTypeName
    FROM Store AS S
    INNER JOIN StoreType AS ST ON S.StoreTypeId = ST.Id
    <where>
      <if test="code != null and code != ''">
        AND S.Code LIKE #{code} + '%'
      </if>
      <if test="name != null and name != ''">
        AND S.Name LIKE '%' + #{name} + '%'
      </if>
      <if test="storeTypeId != null and storeTypeId.size > 0">
        AND S.StoreTypeId IN
        <foreach collection="storeTypeId" item="id" open="(" separator="," close=")">
          #{id}
        </foreach>
      </if>
      <if test="isActive != null">
        AND S.IsActive = #{isActive}
      </if>
      <if test="createAtS != null and createAtS != ''">
        AND S.CreateAt &gt;= #{createAtS}
      </if>
      <if test="createAtE != null and createAtE != ''">
        AND S.CreateAt &lt;= #{createAtE}
      </if>
      <if test="updateAtS != null and updateAtS != ''">
        AND S.UpdateAt &gt;= #{updateAtS}
      </if>
      <if test="updateAtE != null and updateAtE != ''">
        AND S.UpdateAt &lt;= #{updateAt}
      </if>
    </where>
    ORDER BY Id
  </select>
</mapper>