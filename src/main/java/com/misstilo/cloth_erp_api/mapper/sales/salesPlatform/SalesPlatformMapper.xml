<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.misstilo.cloth_erp_api.mapper.sales.salesPlatform.SalesPlatformMapper">
  <!-- Result Map for SalesPlatform -->
  <resultMap id="salesPlatformResultMap" type="com.misstilo.cloth_erp_api.model.sales.salesPlatform.SalesPlatformResponse">
    <id column="Id" property="id" />
    <result column="Name" property="name" />
  </resultMap>

  <!-- Insert -->
  <insert id="insert">
    INSERT INTO SalesPlatform (Name)
    VALUES (#{name})
  </insert>
  <!-- Delete -->
  <delete id="delete">
    DELETE FROM SalesPlatform
    WHERE id = #{id}
  </delete>
  <!-- Update -->
  <update id="update">
    UPDATE SalesPlatform
    <set>
      <if test="name != null">
        Name = #{name},
      </if>
    </set>
    <where>
      Id = #{id}
    </where>
  </update>
  <!-- Select -->
  <select id="select" resultMap="salesPlatformResultMap">
    SELECT *
    FROM SalesPlatform
    <where>
      <if test="name != null and name != ''">
        AND Name LIKE '%' + #{name} + '%'
      </if>
    </where>
    ORDER BY Id
  </select>
</mapper>