<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.misstilo.cloth_erp_api.mapper.product.tag.TagMapper">
  <!-- Result Map for Tag -->
  <resultMap id="tagResultMap" type="com.misstilo.cloth_erp_api.model.product.tag.TagResponse">
    <id column="Id" property="id" />
    <result column="Name" property="name" />
  </resultMap>

  <!-- Insert -->
  <insert id="insert">
    INSERT INTO Tag (Name)
    VALUES (#{name})
  </insert>
  <!-- Delete -->
  <delete id="delete">
    DELETE FROM Tag
    WHERE id = #{id}
  </delete>
  <!-- Update -->
  <update id="update">
    UPDATE Tag
    <set>
      <if test="name != null">
        Name = #{name},
      </if>
    </set>
    <where>
      Id = #{id}
    </where>
  </update>
  <!-- Select -->
  <select id="select" resultMap="tagResultMap">
    SELECT *
    FROM Tag
    <where>
      <if test="name != null and name != ''">
        AND Name LIKE '%' + #{name} + '%'
      </if>
    </where>
    ORDER BY Id
  </select>
</mapper>