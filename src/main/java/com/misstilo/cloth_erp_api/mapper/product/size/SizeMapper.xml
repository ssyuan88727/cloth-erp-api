<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.misstilo.cloth_erp_api.mapper.product.size.SizeMapper">
  <!-- Result Map for Size -->
  <resultMap id="sizeResultMap" type="com.misstilo.cloth_erp_api.model.product.size.SizeResponse">
    <id column="Id" property="id" />
    <result column="Code" property="code" />
    <result column="Name" property="name" />
  </resultMap>

  <!-- Insert -->
  <insert id="insert">
    INSERT INTO Size (Code, Name)
    VALUES (#{code}, #{name})
  </insert>
  <!-- Delete -->
  <delete id="delete">
    DELETE FROM Size
    WHERE id = #{id}
  </delete>
  <!-- Update -->
  <update id="update">
    UPDATE Size
    <set>
      <if test="name != null">
        Name = #{name},
      </if>
    </set>
    <where>
      Id = #{id}
    </where>
  </update>
  <!-- Select -->
  <select id="select" resultMap="sizeResultMap">
    SELECT *
    FROM Size
    <where>
      <if test="code != null and code != ''">
        AND Code LIKE #{code} + '%'
      </if>
      <if test="name != null and name != ''">
        AND Name LIKE '%' + #{name} + '%'
      </if>
    </where>
    ORDER BY Id
  </select>
  <select id="getCodeById">
    SELECT Code FROM Size WHERE Id = #{id}
  </select>
</mapper>